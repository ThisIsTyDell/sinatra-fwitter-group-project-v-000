<h1>Welcome, <a href="/users/<%= current_user.username %>">@<%= current_user.username %></a>!</h1>
<a href="/tweets/new">New Tweet</a>
<% @tweets.each do |tweet| %>
  <section class="col-3 shadow"><a href="/users/<%= tweet.user.username %>">@<%= tweet.user.username %></a> - <a href="/tweets/<%= tweet.id %>"><%= tweet.content %></a></section>
<% end %>